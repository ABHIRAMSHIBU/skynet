#You can use it how ever you want and I dont care
#This script make bash colouring simple and convienent
#Run this script prior to the commands for execution
#Color code resource http://misc.flogisoft.com/bash/tip_colors_and_formatting
#Foregrount Colors
color_reset="\e[0m"
color_fg_green="\e[32m"
color_fg_red="\e[31m"
color_fg_blue="\e[34m"
color_fg_black="\e[30m"
color_fg_yellow="\e[33m"
color_fg_cyan="\e[36m"
color_fg_white="\e[97m"
color_fg_megenta="\e[35m"
echo -e "$color_fg_red""Text color mode activated!""$color_reset"
#Background Colors
color_bg_black="\e[40m"
color_bg_red="\e[41m"
color_bg_green="\e[42m"
color_bg_yellow="\e[43m"
color_bg_blue="\e[44m"
color_bg_magenta="\e[45m"
color_bg_cyan="\e[46m"
color_bg_white="\e[107m"
echo -e "$color_bg_blue""$color_fg_white""Background color mode activated!""$color_reset"
