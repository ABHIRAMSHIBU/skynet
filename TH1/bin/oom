export PATH=/system/etc/Sky:$PATH:/sbin:/vendor/bin:/system/sbin:/system/bin:/system/xbin:

skybox=/system/etc/Sky/skybox

$skybox mount -o remount,rw / 2>/dev/null
$skybox mount -o remount,rw / / 2>/dev/null
$skybox mount -o remount,rw rootfs 2>/dev/null
$skybox mount -o remount,rw /system 2>/dev/null
$skybox mount -o remount,rw /system /system 2>/dev/null

mount -o remount,rw / 2>/dev/null
mount -o remount,rw / / 2>/dev/null
mount -o remount,rw rootfs 2>/dev/null
mount -o remount,rw /system 2>/dev/null
mount -o remount,rw /system /system 2>/dev/null

$skybox clear
$skybox echo -e " \e[1;31m***********************************************************\e[00;37;40m"
$skybox echo ""
$skybox echo -e "  \e[1;37m ===========* PROJECT_SKYNET_GENISYS TX7 *============\e[00;37;40m"
$skybox echo ""
$skybox echo -e " \e[1;31m      =============* BACKGROUND APP *===============\e[00;37;40m"
$skybox echo ""
$skybox echo -e " \e[1;31m***********************************************************\e[00;37;40m"
$skybox echo ""
$skybox echo " Tutorial : e.g For NovaLauncher = com.teslacoilsw.launcher"
$skybox echo "             >>> No Permanent After Reboot <<<"
$skybox echo ""
$skybox echo -n "   Which App Would You Like To Lock In The Background : " && sleep 1; read app;
$skybox sleep 1                           
$skybox echo ""
$skybox echo "***********************************************************"
$skybox echo ""

setprop sys.keep_app_1 $app

$skybox sleep 1
$skybox echo "***********************************************************"
$skybox echo ""
$skybox echo "               EveryThing is Done for $app!!!"
$skybox sleep 2